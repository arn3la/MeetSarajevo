<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="10dp"
        android:alpha="1"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/no_image_place_holder"/>

            <TextView
                android:id="@+id/location_name"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/location_category"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_name"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/starProsjecna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/img_location"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/RatingBar"
                android:isIndicator="true"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:id="@+id/star_ocjena"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/starProsjecna"
                android:layout_toEndOf="@+id/starProsjecna"
                android:layout_toRightOf="@+id/starProsjecna"
                android:textColor="@color/colorSecondaryText"
                android:textSize="24sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>